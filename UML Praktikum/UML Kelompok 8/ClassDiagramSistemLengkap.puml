' ============ CORE ENTITIES ============
class User {
  - userId: String
  - email: String
  - password: String
  - role: String
  - status: String
  + login(): Boolean
  + logout(): Boolean
  + getProfile(): UserProfile
}

class Mahasiswa {
  - nim: String
  - jurusan: String
  - semester: Integer
  - statusUKT: String
  + bayarUKT(): Boolean
  + lihatInformasi(): List<Informasi>
  + chatDosen(): Boolean
}

class Dosen {
  - nid: String
  - mataKuliah: String[]
  - department: String
  + balasChat(): Boolean
  + lihatJadwal(): List<Jadwal>
}

class Admin {
  - adminId: String
  - privileges: String[]
  + monitorSistem(): Report
  + kelolaUser(): Boolean
  + updateInformasi(): Boolean
}

' ============ FEATURE CLASSES ============
class Chat {
  - chatId: String
  - senderId: String
  - receiverId: String
  - message: String
  - timestamp: Date
  - isEncrypted: Boolean
  - status: String
  + kirimPesan(): Boolean
  + bacaPesan(): List<Chat>
  + encryptMessage(): String
}

class Informasi {
  - infoId: String
  - title: String
  - content: String
  - category: String
  - targetAudience: String[]
  - publishDate: Date
  - expiryDate: Date
  - priority: String
  + publish(): Boolean
  + getByCategory(): List<Informasi>
  + notifyUsers(): Boolean
}

class Pembayaran {
  - paymentId: String
  - studentId: String
  - amount: Double
  - status: String
  - dueDate: Date
  - paymentDate: Date
  - method: String
  + prosesPembayaran(): Boolean
  + generateInvoice(): String
  + updateStatus(): Boolean
}

class Notifikasi {
  - notifId: String
  - userId: String
  - message: String
  - type: String
  - isRead: Boolean
  - createdDate: Date
  + sendNotification(): Boolean
  + markAsRead(): Boolean
  + getUnread(): List<Notifikasi>
}

